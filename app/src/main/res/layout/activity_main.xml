                            android:layout_marginTop="4dp"
                            android:text="Capricorn"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>


                </LinearLayout>

                <!--Aquarius-->
                <LinearLayout
                    android:id="@+id/layoutAquarius"
                    android:layout_width="match_parent"
