<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="24dp"
        android:weightSum="4">

        <!--layout 1-->
        <TextView
            android:id="@+id/horoscope_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Horoscopes"
            android:textColor="@color/colorWhite"
            android:textSize="24dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--aries-->
                <LinearLayout
                    android:id="@+id/layoutAries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pressed">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/iv_Aries"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/aries" />

                        <TextView
                            android:id="@+id/tv_Aries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_Aries"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="4dp"
                            android:text="Aries"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>


                </LinearLayout>

                <!--taurus-->
                <LinearLayout
                    android:id="@+id/layoutTaurus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pressed">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/iv_Taurus"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/taurus" />

                        <TextView
                            android:id="@+id/tv_Taurus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_Taurus"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="4dp"
                            android:text="Taurus"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>


                </LinearLayout>

                <!--gemini-->
                <LinearLayout
                    android:id="@+id/layoutGemini"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pressed">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/iv_Gemini"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/gemini" />

                        <TextView
                            android:id="@+id/tv_Gemini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_Gemini"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="4dp"
                            android:text="Gemini"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--layout 2-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--cancer-->
                <LinearLayout
                    android:id="@+id/layoutCancer"
                    android:layout_width="match_parent"
