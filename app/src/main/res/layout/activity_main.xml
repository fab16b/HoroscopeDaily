                        <TextView
                            android:id="@+id/tv_Leo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_Leo"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="4dp"
                            android:text="Leo"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>


                </LinearLayout>

                <!--virgo-->
                <LinearLayout
                    android:id="@+id/layoutVirgo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_pressed">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/iv_Virgo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/virgo" />

                        <TextView
                            android:id="@+id/tv_Virgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_Virgo"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="4dp"
                            android:text="Virgo"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--layout 3-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--Libra-->
                <LinearLayout
                    android:id="@+id/layoutLibra"
