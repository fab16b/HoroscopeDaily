                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_Pisces"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="4dp"
                            android:text="Pisces"
                            android:textColor="@android:color/white" />

